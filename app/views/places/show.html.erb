<div class="container pt-2">
      <h1><%= @place["name"] %></h1>
  
  
    <h3>My Posts</h3>
    <p></p>
    
    <div class="row">
      <% for post in @posts %>
       <div class="col-md-4 col-sm-6">
        <h3><%= post["title"] %></h3>
        <h6><%= post["posted_on"] %></h4>
        <p><%= post["description"] %></p>
      </div>
      <% end %>
    </div>

   
      <% if @current_user != nil %>
      <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-outline-primary .text-nowrap">New Post</a>
      <% end %>
   
<p>
  <a href="/places" class="btn btn-outline-primary .text-nowrap">Back to All Places</a>
</p>


